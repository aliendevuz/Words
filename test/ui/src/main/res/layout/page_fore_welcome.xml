<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/l_welcome_logo_background"
        android:layout_gravity="center"
        android:layout_marginBottom="120sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_welcome_logo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ilova_cube1" />

        <ImageView
            android:id="@+id/iv_welcome_logo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ilova_cube2" />

        <ImageView
            android:id="@+id/iv_welcome_logo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ilova_cube3" />

    </FrameLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_welcome_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ilova.uz"
        android:textColor="@color/color_welcome_text"
        android:textSize="28sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_welcome_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="taqdim etadi"
        android:textColor="@color/color_welcome_text" />

</FrameLayout>