<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:elevation="8dp"
                android:gravity="center_vertical"
                android:background="@color/light_blue">

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="24dp"
                    android:layout_width="54dp"
                    apps:cardElevation="4dp"
                    android:background="@color/background"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    apps:cardCornerRadius="27dp"
                    android:layout_height="54dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/ib_panel_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:paddingBottom="3.2dp"
                            android:text="AD"
                            android:background="#C2FFDB"
                            android:textColor="#00C853"
                            android:visibility="gone"
                            android:textSize="26sp" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ib_panel_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:src="@drawable/avatar_people_person_profile_user_svgrepo_com"
                            apps:shapeAppearanceOverlay="@style/circular_corner" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Alien Dev"
                    android:textColor="@color/white"
                    android:textSize="19.2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="12dp"
                android:elevation="8dp"
                android:outlineSpotShadowColor="@color/black"
                android:background="@drawable/back_book_beginner"
                android:orientation="vertical"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#00AAFF"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="12dp"
                    android:text="Beginner book" />

                <androidx.core.widget.NestedScrollView
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/bb1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:elevation="2dp"
                            android:background="@drawable/back_book_beginner_1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="#8080FF"
                                    android:src="@drawable/imagesmode_24dp_fill0_wght400_grad0_opsz24"
                                    apps:layout_constraintDimensionRatio="1:1"
                                    apps:layout_constraintTop_toTopOf="@id/cl_1"
                                    apps:shapeAppearanceOverlay="@style/circular_corner_8" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="28dp"
                                android:layout_height="4dp"
                                apps:cardElevation="0dp"
                                apps:cardCornerRadius="4dp"
                                apps:cardBackgroundColor="#8080FF"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="3.2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bb2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:elevation="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_book_beginner_1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="#B380FF"
                                    android:src="@drawable/imagesmode_24dp_fill0_wght400_grad0_opsz24"
                                    apps:layout_constraintDimensionRatio="1:1"
                                    apps:layout_constraintTop_toTopOf="@id/cl_2"
                                    apps:shapeAppearanceOverlay="@style/circular_corner_8" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="28dp"
                                android:layout_height="4dp"
                                apps:cardElevation="0dp"
                                apps:cardCornerRadius="4dp"
                                apps:cardBackgroundColor="#B380FF"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="3.2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:elevation="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_book_beginner_1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="#FF8080"
                                    android:src="@drawable/imagesmode_24dp_fill0_wght400_grad0_opsz24"
                                    apps:layout_constraintDimensionRatio="1:1"
                                    apps:layout_constraintTop_toTopOf="@id/cl_3"
                                    apps:shapeAppearanceOverlay="@style/circular_corner_8" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="28dp"
                                android:layout_height="4dp"
                                apps:cardElevation="0dp"
                                apps:cardCornerRadius="4dp"
                                apps:cardBackgroundColor="#FF8080"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="3.2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bb4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:elevation="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_book_beginner_1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="#FF80B3"
                                    android:src="@drawable/imagesmode_24dp_fill0_wght400_grad0_opsz24"
                                    apps:layout_constraintDimensionRatio="1:1"
                                    apps:layout_constraintTop_toTopOf="@id/cl_4"
                                    apps:shapeAppearanceOverlay="@style/circular_corner_8" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="28dp"
                                android:layout_height="4dp"
                                apps:cardElevation="0dp"
                                apps:cardCornerRadius="4dp"
                                apps:cardBackgroundColor="#FF80B3"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="3.2dp" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_beginner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/back_book_beginner"
                android:padding="12dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:background="@drawable/back_book_essential"
                android:orientation="vertical"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="12dp"
                    android:textColor="#00AAFF"
                    android:text="Essential book" />

                <androidx.core.widget.NestedScrollView
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:id="@+id/eb1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:elevation="2dp"
                                android:background="@drawable/back_book_essential_1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_marginTop="4dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:background="#3BFF8C"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/book1"
                                        apps:layout_constraintDimensionRatio="3:4"
                                        apps:layout_constraintTop_toTopOf="@id/cl_5"
                                        apps:shapeAppearanceOverlay="@style/circular_corner_10" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    apps:cardElevation="0dp"
                                    apps:cardCornerRadius="4dp"
                                    apps:cardBackgroundColor="#64DD17"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="3.2dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/eb2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:elevation="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_book_essential_1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_marginTop="4dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:background="#FF9547"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/book2"
                                        apps:layout_constraintDimensionRatio="3:4"
                                        apps:layout_constraintTop_toTopOf="@id/cl_6"
                                        apps:shapeAppearanceOverlay="@style/circular_corner_10" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    apps:cardElevation="0dp"
                                    apps:cardCornerRadius="4dp"
                                    apps:cardBackgroundColor="#FF6D00"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="3.2dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/eb3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:elevation="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_book_essential_1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_marginTop="4dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:background="#55BDFD"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/book3"
                                        apps:layout_constraintDimensionRatio="3:4"
                                        apps:layout_constraintTop_toTopOf="@id/cl_7"
                                        apps:shapeAppearanceOverlay="@style/circular_corner_10" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    apps:cardElevation="0dp"
                                    apps:cardCornerRadius="4dp"
                                    apps:cardBackgroundColor="#0091EA"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="3.2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:id="@+id/eb4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:elevation="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_book_essential_1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_marginTop="4dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:background="#D889FF"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/book4"
                                        apps:layout_constraintDimensionRatio="3:4"
                                        apps:layout_constraintTop_toTopOf="@id/cl_8"
                                        apps:shapeAppearanceOverlay="@style/circular_corner_10" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    apps:cardElevation="0dp"
                                    apps:cardCornerRadius="4dp"
                                    apps:cardBackgroundColor="#AA00FF"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="3.2dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/eb5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:elevation="2dp"
                                android:background="@drawable/back_book_essential_1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_9"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_marginTop="4dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:scaleType="fitXY"
                                        android:background="#49E1CC"
                                        android:src="@drawable/book5"
                                        apps:layout_constraintDimensionRatio="3:4"
                                        apps:layout_constraintTop_toTopOf="@id/cl_9"
                                        apps:shapeAppearanceOverlay="@style/circular_corner_10" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    apps:cardElevation="0dp"
                                    apps:cardCornerRadius="4dp"
                                    apps:cardBackgroundColor="#00BFA5"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="3.2dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/eb6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:elevation="2dp"
                                android:background="@drawable/back_book_essential_1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_marginTop="4dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:scaleType="fitXY"
                                        android:background="#894AE1"
                                        android:src="@drawable/book6"
                                        apps:layout_constraintDimensionRatio="3:4"
                                        apps:layout_constraintTop_toTopOf="@id/cl_10"
                                        apps:shapeAppearanceOverlay="@style/circular_corner_10" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    apps:cardElevation="0dp"
                                    apps:cardCornerRadius="4dp"
                                    apps:cardBackgroundColor="#304FFE"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="3.2dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_essential"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:background="@drawable/back_book_beginner"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="64dp"
                    android:background="@color/blue"
                    android:elevation="4dp"
                    android:outlineSpotShadowColor="@color/green"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/b_general"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="64dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_b_general"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:text="Umumiy topshiriqlar"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <ImageButton
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="64dp"
                    android:background="@color/purple"
                    android:elevation="4dp"
                    android:outlineSpotShadowColor="@color/green2"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/back_search"
            android:visibility="gone"
            android:background="#B8000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/lock_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:gravity="center_vertical|end">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_search"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="24dp"
                    apps:cardElevation="4dp"
                    android:layout_marginTop="12dp"
                    apps:cardBackgroundColor="@color/background"
                    apps:cardCornerRadius="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_search"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="0dp"
                            android:layout_weight="0" />

                        <ImageButton
                            android:id="@+id/ib_search"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:src="@drawable/search_40dp_fill0_wght0_grad0_opsz40"
                            apps:shapeAppearanceOverlay="@style/circular_corner" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>